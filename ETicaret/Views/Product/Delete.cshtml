@model ETicaret.Entity.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sil</h2>

<h3 style="color:red">Bu Ürünü Silmek İstediğinizden Emin Misiniz?</h3>
<div>

    <dl class="dl-horizontal">


        <dd>
            Adı:
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Açıklama:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Fiyat:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Adet:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock)
        </dd>

        <dt>
            Resim:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Image)
            <img src="~/Content/Image/@Model.Image" width="75" height="50"/>
        </dd>

        <dt>
            Slider:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slider)
        </dd>

        <dt>
            Anasayfa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsHome)
        </dd>

        <dt>
            Onaylı:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsApproved)
        </dd>

        <dt>
            Popüler:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsFeatured)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> 
            @Html.ActionLink("Ürün Listesi", "Index", null, new { @class = "btn btn-warning" })
        </div>
    }
</div>
